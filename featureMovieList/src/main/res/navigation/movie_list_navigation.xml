<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_list_navigation"
    app:startDestination="@id/moviesListFragment">

    <fragment
        android:id="@+id/moviesListFragment"
        android:name="com.example.featureMovieList.MovieListFragment"
        tools:layout="@layout/fragment_movies_list"
        android:label="@string/movie_list" >

        <action
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_right"
            android:id="@+id/action_to_movie_details"
            app:destination="@id/movie_details_navigation">

            <argument
                android:name="movieId"
                app:argType="long" />
        </action>
    </fragment>

</navigation>